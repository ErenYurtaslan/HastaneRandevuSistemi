@model DoktorBrans

@{
    ViewData["Title"] = "Branş Adını Güncelle";
}

<form method="post">
    <input asp-for="Id" hidden />
    <!--
        eğer modeldeki metodun adı Id yerine bambaşka bir şey olsaydı, bu satırı yazmayınca program hata verirdi.(şu an örnek olsun diye yazıldı)
        Çünkü buradaki "Id" ismi asp için özel bir isim ve bu ismi koyduğun an bunun databasedeki "id" kavramına eşdeğer olduğunu sistem otomatik olarak algılıyor.
    -->
    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h2 class="text-primary"> @_localization.Getkey("Branş Adını Güncelle").Value</h2>
            </hr>
        </div>

        <div class="mb-3">
            <label asp-for="Ad" class="p-0">TR - @_localization.Getkey("Branş Adı").Value</label>
            <input asp-for="Ad" class="form-control" />
            <span asp-validation-for="Ad" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AdEng" class="p-0">EN - @_localization.Getkey("Branş Adı").Value</label>
            <input asp-for="AdEng" class="form-control" />
            <span asp-validation-for="AdEng" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-lg btn-primary" style="width:250px">@_localization.Getkey("Güncelle").Value</button>

        <a asp-controller="DoktorBrans" asp-action="Index" class="btn btn-lg btn-primary" style="width:250px">
            @_localization.Getkey("Branş Listesine Geri Dön").Value
        </a>

    </div>
</form>

